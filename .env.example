# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-token
SLACK_CHANNEL_ID=C12345678

# Home Assistant Configuration
HA_URL=http://your-ha-instance:8123
HA_TOKEN=your-long-lived-access-token
HA_WEBHOOK_ID=beacon_alert           # Optional: Use for webhook-based delivery
HA_NOTIFY_ENTITY=notify              # Optional: Service to call (e.g., mobile_app_pixel_9)

# App Settings
APP_PORT=7867
DEBUG=false
BEACON_INSTANCE_NAME=beacon         # Unique ID for this instance (e.g. beacon_1, beacon_2)

# Monitoring (Heartbeat) - External service check-in
HEARTBEAT_URL=https://heartbeat.uptimerobot.com/m787...
HEARTBEAT_INTERVAL=900 # 15 minutes

# Peer Monitoring (Watcher) - Infrastructure health checks
BEACON_INSTANCE_URL=http://my-instance-ip:7867 # Optional: filters yourself out of manual URLs
BEACON_SERVICE_NAME=beacon-internal            # Shared discovery alias (all instances use the same)
PEER_WATCH_URLS=http://remote-server:7867      # For cross-infrastructure monitoring (comma-separated list)
PEER_WATCH_INTERVAL=300 # 5 minutes
